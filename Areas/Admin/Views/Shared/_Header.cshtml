<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
    function search(data) {
        var strData = data;
        $.ajax({
            url: './Product/search/',
            data: { name: strData },
            method: 'post'
        }).done(function (data) {
            $('#menu').html("");

            $(data).each(function (i, e) {
                var div = $("<div/>"); //tạo div
                var div2 = $("<div/>"); //tạo div
                var div3 = $("<div/>"); //tạo div
                var div4 = $("<div/>"); //tạo div
                var div5 = $("<div/>"); //tạo div


                //Khi áp dụng vào thực tế, nên đặt tên biến cho dễ hiểu hơn
                var img = $("<img/>");
                var p = $("<p/>");
                var p2 = $("<p/>");
                var p3 = $("<p/>");
                var p4 = $("<p/>");
                var i = $("<i/>");
                var a = $("<a/>");
                a.addClass("addToCart");
                a.attr('onclick', "AddToCart('" + e.MHS + "')")
                i.addClass("pt-8 plus-btn fas fa-plus-circle");
                i.appendTo(a);//
                p3.addClass("price");
                div3.addClass("menu-price-buy");
                img.attr("src", "/Assets/User/assets/images/" + e.HINHANH);
                div.addClass("menu-item");
                img.appendTo(div2);
                p.html(e.Name + '(' + e.DVT + ')');
                p.appendTo(div2);
                div2.addClass("menu-img");
                div2.appendTo(div);

                p2.html('Loại:' + e.Loai);
                $(p2).css("float", "left");
                p3.html(e.Price + '₫');

                p2.appendTo(div4);
                p3.appendTo(div4);

                p4.html('Số lượng:' + e.SL);
                p4.addClass('sold');
                p4.appendTo(div5);
                a.appendTo(div5);

                div4.appendTo(div3);
                div5.appendTo(div3);

                div3.appendTo(div2);

                $(div).appendTo('#menu');
            });
        })
    }
</script>
