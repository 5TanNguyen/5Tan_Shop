@model DoAn_555.khachhang

@{
    ViewBag.Title = "Register_KhachHang";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Đăng kí Tài khoản mới</h2>
<br />

@using (Html.BeginForm("Register_KhachHang", "Register", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <b>ID</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kh_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kh_id, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <b>Tài khoản</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kh_username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kh_username, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <b>Mật khẩu</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kh_pwd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kh_pwd, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <b>Họ và tên</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kh_hoten, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kh_hoten, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <b>Địa chỉ</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kh_diachi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kh_diachi, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <b>Số điện thoại</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kh_sdt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kh_sdt, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <b>Ảnh đại diện</b>
        <div class="col-md-10">
            <input type="file" class="form-control" id="formFile" name="fileUpload" placeholder="Chọn hình ảnh đại diện" />
            @Html.ValidationMessageFor(model => model.kh_anh, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <b>Loại khách hàng</b>
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.kh_loai, new { htmlAttributes = new { @class = "form-control" } })*@

            <input type="number" name="kh_loai" value="3" readonly class="form-select" aria-label="Default select example"/>

            @Html.ValidationMessageFor(model => model.kh_loai, "", new { @class = "text-danger" })
        </div>
        <br />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo" class="btn btn-danger" />
        </div>
    </div>
</div>
}
